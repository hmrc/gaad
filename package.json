{
  "name": "gaad",
  "version": "1.0.0",
  "description": "Global Accessibility Awareness Day (GAAD) mini site for HMRC",
  "scripts": {
    "build": "node-sass assets/scss -o assets/css --output-style compressed --source-map true",
    "http-server": "http-server -p 8080",
    "server": "run-p watch:sass http-server",
    "watch:sass": "node-sass assets/scss -o assets/css -w --output-style nested"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmrc/gaad.git"
  },
  "keywords": [
    "HMRC",
    "accessibility",
    "gaad"
  ],
  "author": "HMRC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hmrc/gaad/issues"
  },
  "homepage": "https://github.com/hmrc/gaad#readme",
  "devDependencies": {
    "govuk-frontend": "^2.11.0",
    "http-server": "^0.11.1",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5"
  }
}
